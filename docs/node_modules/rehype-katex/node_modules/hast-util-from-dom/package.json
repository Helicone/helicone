{
  "name": "hast-util-from-dom",
  "version": "4.2.0",
  "description": "hast utility to create a tree from the DOM",
  "license": "ISC",
  "keywords": [
    "unist",
    "hast",
    "hast-util",
    "util",
    "utility",
    "rehype",
    "dom",
    "html"
  ],
  "repository": "syntax-tree/hast-util-from-dom",
  "bugs": "https://github.com/syntax-tree/hast-util-from-dom/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Keith McKnight <keith@mcknig.ht> (https://keith.mcknig.ht)",
  "contributors": [
    "Keith McKnight <keith@mcknig.ht> (https://keith.mcknig.ht)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "index.js",
  "sideEffects": false,
  "type": "module",
  "types": "index.d.ts",
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "hastscript": "^7.0.0",
    "web-namespaces": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/jsdom": "^20.0.0",
    "c8": "^7.0.0",
    "jsdom": "^21.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^4.0.0",
    "xo": "^0.53.0"
  },
  "scripts": {
    "prepack": "npm run build && npm run format",
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --conditions development test/index.js",
    "test-coverage": "c8 --check-coverage --100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "overrides": [
      {
        "files": "test/**/*.js",
        "rules": {
          "no-await-in-loop": 0
        }
      }
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true
  }
}
