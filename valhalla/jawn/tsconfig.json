{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "../../",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "../../",
    "paths": {
      "@helicone-package/*": [
        "packages/*"
      ]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "../../packages/*/src/**/*.ts",
    "../../packages/*/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "swc": true
  }
}