{
  "extends": [
    "eslint:recommended",
    // "plugin:@typescript-eslint/recommended", // this was throwing some error
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["/src/lib/db/valhalla.types.ts"],
  "plugins": ["prettier"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
