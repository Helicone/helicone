{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/tests/*": ["tests/*"]
    }
  },
  "include": ["tests/**/*", "lib/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
