{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--isolated",
        "--headless",
        "--browser",
        "chromium",
        "--no-sandbox",
        "--viewport-size",
        "1280x720"
      ],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "/home/node/.cache/ms-playwright"
      }
    }
  }
}
