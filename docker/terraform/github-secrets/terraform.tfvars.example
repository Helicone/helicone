#################################################################################
# General Configuration
#################################################################################

resource_prefix = "helicone"

tags = {
  Project     = "Helicone"
  Environment = "production"
  ManagedBy   = "Terraform"
  Owner       = "platform-team"
}

#################################################################################
# GitHub Configuration
#################################################################################

# GitHub organization and repository
github_org        = "Helicone"  # Replace with your GitHub org
github_repository = "helicone"  # Replace with your repo name

# Repository management (optional)
manage_repository_settings = false  # Set to true to manage repo settings via Terraform
repository_visibility      = "private"

#################################################################################
# Docker Hub Configuration
#################################################################################

# Docker Hub credentials
# IMPORTANT: These are sensitive values. Consider using environment variables:
# export TF_VAR_docker_username="your-dockerhub-username"
# export TF_VAR_docker_password="your-dockerhub-password-or-token"
docker_username = "your-dockerhub-username"  # Replace with your Docker Hub username
docker_password = "your-dockerhub-password"  # Replace with your Docker Hub password or access token

#################################################################################
# Docker Build Cloud (optional)
#################################################################################

# Docker Build Cloud token (optional). If set, the module creates the
# DOCKER_BUILD_CLOUD_TOKEN secret used by the GitHub workflow to connect
# to Docker Build Cloud.
# Example values can be an Organization Access Token (OAT) with cloud-connect scope
# or a personal access token. Leave commented to skip creating the secret.
# docker_build_cloud_token = "dbc_xxx_or_access_token"

#################################################################################
# Environment Variables Required
#################################################################################

# The following environment variables must be set when running Terraform:
#
# GITHUB_TOKEN - GitHub personal access token with repo permissions
#   Generate at: https://github.com/settings/tokens
#   Required scopes:
#   - repo (full control of private repositories)
#   - workflow (if managing workflow settings)
#
# Example:
# export GITHUB_TOKEN="ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
#
# For Docker Hub credentials (recommended approach):
# export TF_VAR_docker_username="your-dockerhub-username"
# export TF_VAR_docker_password="your-dockerhub-password-or-token"