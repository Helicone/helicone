{
	"name": "@helicone/mcp",
	"version": "0.1.4",
	"description": "Model Context Protocol server for Helicone observability platform",
	"type": "module",
	"bin": {
		"helicone-mcp": "./build/index.js"
	},
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git@github.com:Helicone/helicone.git",
		"directory": "helicone-mcp"
	},
	"scripts": {
		"build": "tsc && chmod 755 build/index.js",
		"start": "node build/index.js",
		"dev": "tsx src/index.ts",
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"type-check": "tsc --noEmit",
		"flatten-types": "tsx flatten-types.ts",
		"generate-zod": "npm run flatten-types && ts-to-zod src/types/flat.ts src/types/generated-zod.ts && npm run build"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"claude",
		"ai",
		"helicone",
		"observability",
		"monitoring",
		"llm"
	],
	"author": "Helicone, Inc.",
	"license": "Apache-2.0",
	"files": [
		"build"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.20.2",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/node": "^24.9.2",
		"typescript": "5.9.3",
		"tsx": "^4.7.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
